@model User

<h2>Xác nhận xóa người dùng</h2>

<div>
    <h4>Bạn có chắc chắn muốn xóa người dùng này?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Tên người dùng:</dt>
        <dd class="col-sm-10">@Model.username</dd>
        <dt class="col-sm-2">Số điện thoại:</dt>
        <dd class="col-sm-10">@Model.phoneNumber</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="userId" />
        <button type="submit" class="btn btn-danger">Xóa</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </form>
</div>