@model IEnumerable<User>

<h2>Quản lý người dùng</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Thêm mới người dùng</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Tên</th>
            <th>Số điện thoại</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.userId</td>
                <td>@user.username</td>
                <td>@user.phoneNumber</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@user.userId" class="btn btn-sm btn-warning">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@user.userId" class="btn btn-sm btn-danger">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>